{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "LibraryApp.AuthService": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "LibraryApp-Super-Secret-Key-For-JWT-Token-Generation-2024-Change-In-Production",
    "Issuer": "LibraryApp.AuthService",
    "Audience": "LibraryApp.Users",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true,
    "ClockSkewMinutes": 5
  },
  "ConnectionStrings": {
    "DefaultConnection": "InMemory"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "https://localhost:3000",
      "https://localhost:4200",
      "http://localhost:5000",
      "https://localhost:5001"
    ]
  }
}
